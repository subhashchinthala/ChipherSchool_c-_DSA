// Access Specifiers

#include<iostream>
using namespace std;

class Student

{

  public:
  // What is public??

  string name;
  int attendence;
  float total_marks;

  void calculate_percentage()

  {

    cout<<total_marks<<"%";

  }

};


// You are making a software for a bank //

class Bank_Client;

{

  private:

  
  int credit_number;
  int cvv;
  string password;
  string name;
  string user_name;

  public:

  


  // we use public function to set private data

  // Private members are accessible inside class AND only inside the class



  //********** To access stuff of an object you definetly need a public element, as private elements of an object are always inacessible 

  void set_credit_card_number(int number)
  {
    credit_number = number;
  }

  int get_creditcardnumber()
  {
    cout<<"The credit card number is "<<credit_number;
    return credit_number;
  }

  void set_alltthestuffatonce(int number, int User_name, int pass)
  {
    credit_number = number;
    name = name;
    password = pass;
  }


  // We use get functions to get the data

  // We use set functions to set the data

};

int main()

{

  /*Student a,b,c;

