};


class Car: public Vehicle // Derived class car has inherited all the data from the base class vehicle
{

  // No member named milage
  // No member function named calculatemilage


  private:
  
  int number_airbags;
  int ac_consumption;

  public:

  void printname()
  {
    cout<<name;
  }
};

class SCV: public Car

{
  public:

  int four_wheel_drive:

};


