// Object Oriented Programming Pt 2

#include<iostream>
using namespace std;


// The vehicle is based class

class Vehicle
{
  public:

  int number_typers;
  string name;
  int capacity;
  int milegage;

  

};

// Now I will inherit the features of the base class into the derived classes

