// This pointer

#include<iostream>
using namespace std;

class Student

{

  public:
  // What is public??

  string name;
  int attendence;
  float total_marks;

  void calculate_percentage()

  {

    cout<<total_marks<<"%";

  }

};


// You are making a software for a bank //

class Bank_Client;

{

  private:

  
  int credit_number;
  int cvv;
  string password;
  
  string user_name;

  public:

  string name;

  


  // we use public function to set private data

  // Private members are accessible inside class AND only inside the class



  //********** To access stuff of an object you definetly need a public element, as private elements of an object are always inacessible 

  void set_credit_card_number(int credit_number)
  {
    
    this -> credit_number = credit_number;
    // The pointer to the object is inherently passed byt the pointer called "this"
    cout<<"The address of the object calling this function is "<<this<<<endl;

  }

  int get_creditcardnumber()
  {
    cout<<"The credit card number is "<<credit_number;
    return credit_number;
  }

  void set_alltthestuffatonce(int credit_number, int User_name, int password)
  {
    this->credit_number = credit_number;
    this->name = name;
    this->password = password;
  }

  // Every object when we define a function


  // We use get functions to get the data

  // We use set functions to set the data

};

int main()

{

  Bank_Client a,b,c;

  a.name = "sudha";

  a.set_credit_card_number(983593);
  // In this function,  other than  the parameters of the function, we also pass the pointer of the object of this class, ans the pointer is reffered to by "this"


  cout<<"The address of this object is "<<&a<<endl;


  return 0;


}
